{
  "encoding": {
    "theta": {
      "field": "value",
      "type": "quantitative",
      "stack": true
    },
    "color": {
      "field": "_id",
      "type": "nominal",
      "legend": {
        "orient": "none",
        "title": null,
        "columns": 1,
        "legendX": 250,
        "legendY": 80
      },
      "scale": {
        "range": [
          "#1071AE"
        ]
      }
    },
    "order": {
      "field": "order",
      "type": "quantitative"
    },
    "opacity": {
      "condition": {
        "selection": {
          "or": [
            "hover1",
            "hover2",
            "click"
          ]
        },
        "value": 1
      },
      "value": 0.2
    }
  },
  "layer": [
    {
      "selection": {
        "hover1": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": [
            "_id"
          ]
        },
        "click": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": [
            "_id"
          ],
          "bind": "legend"
        }
      },
      "mark": {
        "type": "arc",
        "outerRadius": 80
      }
    },
    {
      "selection": {
        "hover2": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": [
            "_id"
          ]
        }
      },
      "mark": {
        "type": "text",
        "radius": 100,
        "fill": "black"
      },
      "encoding": {
        "text": {
          "field": "value",
          "type": "nominal"
        }
      }
    }
  ],
  "view": {
    "stroke": null
  }
}