    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "address": "0.0.0.0",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/app",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "/app/*": "${workspaceRoot}/*"
            },
        }
    ]
}
